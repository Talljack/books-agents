# OpenAI API Key (use this OR OpenRouter, not both)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API Key (alternative to OpenAI - supports free models)
# Get your API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model (optional, defaults to google/gemma-2-9b-it:free)
# Free models available:
#   - google/gemma-2-9b-it:free
#   - meta-llama/llama-3.2-3b-instruct:free
#   - mistralai/mistral-7b-instruct:free
#   - qwen/qwen-2-7b-instruct:free
# See all models at: https://openrouter.ai/models
OPENROUTER_MODEL=google/gemma-2-9b-it:free

# Google Books API Key (optional, increases rate limits)
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000
